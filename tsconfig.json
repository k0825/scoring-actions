{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "lib": ["es2020"],
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./problems",
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "problems",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["problems/**/*"],
    "exclude": ["dist", "node_modules"],
    "compileOnSave": false
}